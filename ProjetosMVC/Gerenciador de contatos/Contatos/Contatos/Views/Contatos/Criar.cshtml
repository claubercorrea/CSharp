@model Contatos.Models.Contato
<div class=" container mt-5">
    <h2 class="fw-bold text-center" style="margin-top:10%; font-size:3rem;">Novo Contato</h2>



    <form asp-action="Criar" class="d-flex flex-column justify-content-center  w-25" style="margin-top:10%; margin-left:auto; margin-right:auto;">
    <div class="mb-3">
      
        <input asp-for="Nome"type="text"  class="form-control" placeholder="Nome">
        <span asp-validation-for"Nome" class="text-danger"></span>
    </div>
        <div class="mb-3">
          
            <input asp-for="Email" type="text" class="form-control" placeholder="E-mail">
            <span asp-validation-for"Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
           
            <input asp-for="Telefone" type="text" class="form-control" placeholder="Telefone">
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
      
    <button type="submit" class="btn btn-success mb-2">Salvar Contato</button>
    <a asp-action="Index" class=" btn btn-danger">Cancelar</a>
    </form>
</div>