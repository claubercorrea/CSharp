@{
    ViewData["Title"] = "Gerenciador de contatos";
}


    <div class="text-center">


        <h1 class="display-4 fw-bold text-center" style="font-weight:400; margin-top:10%">Gerencidador de Contatos</h1>
        <main style="margin-top:10%;">
            <div class="container mt-5">
                <div class="d-flex justify-content-between align-items-center mb-5">
                    <div>
                        <h2 class="fw-bold text-dark">Meus Contatos</h2>
                        
                    </div>
                    
                <a asp-action="Criar" class=" btn btn-primary shadow-sm px-4 ">+ Novo Contato</a>

                </div>
           

                </div>
                </main>


@model IEnumerable<Contatos.Models.Contato>
<div class="container">
<div class=" row">

    @if (Model != null && Model.Any())
    {
                @foreach (var contato in Model) {



                    <div class="col-12 col-md-6 col-lg-4 mb-4">
                        <div class="card shadow-sm border-0 h-100" style="border-radius: 15px;">
                <div class="card-header bg-primary" style="height: 10px; border-radius: 15px 15px 0 0;"></div>
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <span class="fs-4 text-primary fw-bold">@contato.Nome[0].ToString().ToUpper()</span>
                        </div>
                        <div>
                            <h5 class="card-title mb-0 fw-bold mb-3">@contato.Nome</h5>
                            <span class="badge bg-info text-white mb-3" >Trabalho</span>
                        </div>
                    </div>
                    <div class="mt-3 text-start" >
                                    <p class="d-flex align-items-center mb-2 text-muted" ><strong>📞 Telefone:</strong>@contato.Telefone</p>
                        <p class="mb-1 "><strong>✉️ Email:</strong> @contato.Email</p>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 p-3 d-flex justify-content-end">
                    <a asp-action="Editar" asp-route-id="@contato.Id" class="btn btn-primary btn-sm me-2">Editar</a>
                                <form asp-action="Excluir" asp-route-id="@contato.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Deseja apagar mesmo este contato?')">Excluir</button>
                                </form>
                </div>
                            
            </div>
        </div>
        
        }
    }

       </div>
    </div>
</div>